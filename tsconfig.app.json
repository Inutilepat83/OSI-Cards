{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": []
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.stories.ts",
    "src/test.ts",
    "src/app/testing/**/*",
    "example/**/*",
    "src/environments/environment.prod.ts",
    "src/app/features/index.ts",
    "src/app/features/home/index.ts",
    "src/app/store/index.ts",
    "src/app/shared/components/cards/sections/archive/**/*",
    "src/styles/components/sections/archive/**/*",
    ".storybook/**/*"
  ]
}
