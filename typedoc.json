{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": [
    "src/app/core/**/*.ts",
    "src/app/shared/**/*.ts",
    "src/app/features/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/node_modules/**",
    "**/dist/**",
    "**/e2e/**",
    "docs/IMPLEMENTATION_SUMMARY.md",
    "docs/IMPROVEMENT_PLAN.md",
    "docs/IMPROVEMENTS_IMPLEMENTED.md",
    "docs/TYPESCRIPT_STRICT_MIGRATION.md"
  ],
  "out": "docs/api",
  "theme": "default",
  "name": "OSI Cards API Documentation",
  "readme": "README.md",
  "includeVersion": true,
  "gitRevision": "main",
  "excludePrivate": false,
  "excludeProtected": false,
  "excludeInternal": false,
  "includeSources": true,
  "sourceLinkTemplate": "https://github.com/your-org/osi-cards/blob/{gitRevision}/{path}#L{line}",
  "categorizeByGroup": true,
  "categoryOrder": [
    "Core Services",
    "Shared Components",
    "Features",
    "Models",
    "Utilities",
    "*"
  ],
  "kindSortOrder": [
    "Project",
    "Module",
    "Namespace",
    "Enum",
    "Class",
    "Interface",
    "Type alias",
    "Function",
    "Variable"
  ],
  "navigation": {
    "includeCategories": true,
    "includeGroups": true
  },
  "searchInComments": true,
  "validation": {
    "invalidLink": true,
    "notDocumented": false
  },
  "plugin": [
    "typedoc-plugin-markdown",
    "typedoc-plugin-example-tag"
  ],
  "markdown": {
    "gitbook": false,
    "hideBreadcrumbs": false,
    "hidePageHeader": false,
    "hidePageTitle": false,
    "hideSources": false
  }
}
