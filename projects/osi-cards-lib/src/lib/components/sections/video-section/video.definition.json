{
  "type": "video",
  "name": "Video Section",
  "portfolioDescription": "Video content, demos, recordings (store URLs in meta)",
  "description": "Displays video content with thumbnails, durations, and playback controls.",
  "selector": "lib-video-section",
  "useCases": [
    "Product demos",
    "Training videos",
    "Webinar recordings",
    "Customer testimonials",
    "Tutorial content"
  ],
  "bestPractices": [
    "Include video thumbnails",
    "Show duration information",
    "Add descriptive titles",
    "Provide video URLs",
    "Group by category"
  ],
  "rendering": {
    "usesFields": false,
    "usesItems": true,
    "defaultColumns": 2,
    "supportsCollapse": true
  },
  "itemSchema": {
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "description": "Video title"
      },
      "description": {
        "type": "string",
        "description": "Video description"
      },
      "meta": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "description": "Video URL"
          },
          "thumbnail": {
            "type": "string",
            "description": "Thumbnail image URL"
          },
          "duration": {
            "type": "string",
            "description": "Video duration"
          },
          "views": {
            "type": "number",
            "description": "View count"
          },
          "category": {
            "type": "string",
            "description": "Video category"
          }
        }
      }
    },
    "required": ["title"]
  },
  "completionRules": {
    "minItems": 1,
    "requireNonEmptyValues": true,
    "mandatoryFields": ["title"]
  },
  "aliases": ["videos", "media"],
