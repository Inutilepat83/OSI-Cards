{
  "type": "chart",
  "name": "Chart Section",
  "portfolioDescription": "Data visualizations with labels and datasets (multiple data points encouraged)",
  "description": "Displays data visualizations including bar charts, line charts, pie charts, and more.",
  "selector": "lib-chart-section",
  "useCases": [
    "Data visualization",
    "Analytics dashboards",
    "Statistical reports",
    "Trend analysis",
    "Performance tracking"
  ],
  "bestPractices": [
    "Provide proper chart configuration",
    "Include chart type specification",
    "Use appropriate data formats",
    "Ensure accessibility with labels",
    "Choose chart type based on data"
  ],
  "rendering": {
    "usesFields": false,
    "usesItems": false,
    "usesChartData": true,
    "defaultColumns": 2,
    "supportsCollapse": false,
    "requiresExternalLib": "frappe-charts"
  },
  "chartSchema": {
    "type": "object",
    "properties": {
      "chartType": {
        "type": "string",
        "enum": ["bar", "line", "pie", "doughnut", "area", "radar"],
        "description": "Type of chart"
      },
      "chartData": {
        "type": "object",
        "properties": {
          "labels": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "datasets": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "label": {
                  "type": "string"
                },
                "data": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  }
                },
                "backgroundColor": {
                  "type": ["string", "array"]
                },
                "borderColor": {
                  "type": ["string", "array"]
                },
                "borderWidth": {
                  "type": "number"
                },
                "objectives": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  },
                  "description": "Optional array of objective/target values to display in tooltips on hover"
                }
              },
              "required": ["data"]
            }
          }
        }
      }
    }
  },
  "completionRules": {
    "requireChartData": true
  },
  "aliases": ["graph", "visualization"],
