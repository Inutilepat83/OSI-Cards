{
  "type": "chart",
  "name": "Chart Section",
  "description": "Displays data visualizations including bar charts, line charts, pie charts, and doughnut charts. Uses Chart.js library (via ng2-charts) for rendering interactive charts with customizable datasets, labels, and styling.",
  "portfolioDescription": "Data visualizations with labels and datasets (multiple data points encouraged)",
  "selector": "lib-chart-section",
  "useCases": [
    "Data visualization",
    "Analytics dashboards",
    "Statistical reports",
    "Trend analysis",
    "Performance tracking",
    "Revenue charts",
    "Growth metrics",
    "Comparative analysis"
  ],
  "bestPractices": [
    "Provide proper chart configuration with chartType specified",
    "Include descriptive labels for datasets",
    "Use appropriate chart type based on data (bar for comparisons, line for trends, pie for proportions)",
    "Ensure accessibility with clear labels and legends",
    "Use consistent color schemes across datasets",
    "Include multiple data points for meaningful visualizations",
    "Specify backgroundColor and borderColor for better visual distinction"
  ],
  "rendering": {
    "usesFields": false,
    "usesItems": false,
    "usesChartData": true,
    "defaultColumns": 2,
    "supportsCollapse": false,
    "supportsEmoji": false,
    "requiresExternalLib": "chart.js"
  },
  "chartDataSchema": {
    "type": "object",
    "properties": {
      "labels": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Chart labels for x-axis or categories"
      },
      "datasets": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "label": {
              "type": "string",
              "description": "Dataset label for legend"
            },
            "data": {
              "type": "array",
              "items": {
                "type": ["number", "null"]
              },
              "description": "Data points for the chart"
            },
            "backgroundColor": {
              "type": ["string", "array"],
              "description": "Background color(s) for chart elements"
            },
            "borderColor": {
              "type": ["string", "array"],
              "description": "Border color(s) for chart elements"
            },
            "borderWidth": {
              "type": "number",
              "description": "Border width in pixels"
            }
          },
          "required": ["data"]
        },
        "description": "Array of datasets to display on the chart"
      }
    },
    "required": ["datasets"]
  },
  "completionRules": {
    "requireChartData": true,
    "minDatasets": 1,
    "requireNonEmptyValues": true
  },
  "aliases": ["graph", "visualization"],
