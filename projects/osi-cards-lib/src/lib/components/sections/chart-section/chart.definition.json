{
  "type": "chart",
  "name": "Chart Section",
  "description": "Displays data visualizations including bar charts, line charts, pie charts, and more.",
  "selector": "lib-chart-section",
  "useCases": [
    "Data visualization",
    "Analytics dashboards",
    "Statistical reports",
    "Trend analysis",
    "Performance tracking"
  ],
  "bestPractices": [
    "Provide proper chart configuration",
    "Include chart type specification",
    "Use appropriate data formats",
    "Ensure accessibility with labels",
    "Choose chart type based on data"
  ],
  "rendering": {
    "usesFields": false,
    "usesItems": false,
    "usesChartData": true,
    "defaultColumns": 2,
    "supportsCollapse": false,
    "supportsEmoji": false,
    "requiresExternalLib": "chart.js"
  },
  "chartSchema": {
    "type": "object",
    "properties": {
      "chartType": {
        "type": "string",
        "enum": ["bar", "line", "pie", "doughnut", "area", "radar"],
        "description": "Type of chart"
      },
      "chartData": {
        "type": "object",
        "properties": {
          "labels": { "type": "array", "items": { "type": "string" } },
          "datasets": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "label": { "type": "string" },
                "data": { "type": "array", "items": { "type": "number" } },
                "backgroundColor": { "type": ["string", "array"] },
                "borderColor": { "type": ["string", "array"] },
                "borderWidth": { "type": "number" }
              },
              "required": ["data"]
            }
          }
        }
      }
    }
  },
  "aliases": ["graph", "visualization"],
  "testFixtures": {
    "complete": {
      "title": "Revenue & Growth Analysis",
      "type": "chart",
      "chartType": "bar",
      "chartData": {
        "labels": [
          "Q1 2024",
          "Q2 2024",
          "Q3 2024",
          "Q4 2024",
          "Q1 2025 (Proj)"
        ],
        "datasets": [
          {
            "label": "Revenue ($M)",
            "data": [28.5, 32.1, 35.8, 42.4, 48.2],
            "backgroundColor": "#FF7900",
            "borderColor": "#FF7900",
            "borderWidth": 1
          },
          {
            "label": "Operating Costs ($M)",
            "data": [22.1, 24.3, 26.8, 31.2, 34.5],
            "backgroundColor": "#4CAF50",
            "borderColor": "#4CAF50",
            "borderWidth": 1
          },
          {
            "label": "Net Profit ($M)",
            "data": [6.4, 7.8, 9.0, 11.2, 13.7],
            "backgroundColor": "#2196F3",
            "borderColor": "#2196F3",
            "borderWidth": 1
          }
        ]
      }
    },
    "minimal": {
      "title": "Basic Chart",
      "type": "chart",
      "chartType": "bar",
      "chartData": {
        "labels": ["A", "B", "C"],
        "datasets": [{ "data": [10, 20, 30] }]
      }
    },
    "edgeCases": {
      "title": "Chart Edge Cases",
      "type": "chart",
      "chartType": "line",
      "chartData": {
        "labels": [
          "Jan",
          "Feb",
          "Mar",
          "Apr",
          "May",
          "Jun",
          "Jul",
          "Aug",
          "Sep",
          "Oct",
          "Nov",
          "Dec"
        ],
        "datasets": [
          {
            "label": "Negative Values",
            "data": [-50, -25, -10, 0, 15, 30, 45, 35, 20, 5, -15, -30]
          },
          {
            "label": "Large Scale",
            "data": [
              1000000, 2500000, 1800000, 3200000, 2900000, 4100000, 3800000,
              4500000, 5200000, 4800000, 5800000, 6200000
            ]
          },
          {
            "label": "Sparse Data",
            "data": [
              null,
              null,
              100,
              null,
              null,
              200,
              null,
              null,
              300,
              null,
              null,
              400
            ]
          }
        ]
      }
    }
  }
}



