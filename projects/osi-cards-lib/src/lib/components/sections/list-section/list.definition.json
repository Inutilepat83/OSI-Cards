{
  "type": "list",
  "name": "List Section",
  "portfolioDescription": "Descriptive facts, capabilities, operational points, collections of related items (tasks, features, opportunities, informational points)",
  "description": "Displays structured lists of items including descriptive facts, capabilities, operational points, tasks, features, and opportunities. Supports sorting, filtering, and item interactions.",
  "selector": "lib-list-section",
  "useCases": [
    "Descriptive facts and capabilities",
    "Operational points and success factors",
    "Network reach and delivery footprint descriptions",
    "Informational items with descriptive text",
    "Product lists",
    "Feature lists",
    "Task lists",
    "Inventory",
    "Requirements"
  ],
  "bestPractices": [
    "Use for descriptive facts, capabilities, and operational points - even if they contain numbers, if the primary purpose is to describe rather than measure",
    "Use items array for list data",
    "Include titles and descriptions",
    "Add status badges when relevant",
    "Keep list items scannable",
    "Use icons for visual hierarchy"
  ],
  "rendering": {
    "usesFields": false,
    "usesItems": true,
    "defaultColumns": 1,
    "supportsCollapse": true,
    "supportsEmoji": true
  },
  "itemSchema": {
    "type": "object",
    "properties": {
      "title": {
        "type": "string",
        "description": "Item title"
      },
      "description": {
        "type": "string",
        "description": "Item description"
      },
      "icon": {
        "type": "string",
        "description": "Icon identifier"
      },
      "status": {
        "type": "string",
        "enum": ["completed", "in-progress", "pending", "cancelled", "blocked"],
        "description": "Item status"
      },
      "value": {
        "type": ["string", "number"],
        "description": "Item value"
      },
      "date": {
        "type": "string",
        "format": "date",
        "description": "Item date"
      },
      "priority": {
        "type": "string",
        "enum": ["critical", "high", "medium", "low"],
        "description": "Priority level"
      }
    },
    "required": ["title"]
  },
  "completionRules": {
    "minItems": 1,
    "requireNonEmptyValues": true,
    "mandatoryFields": ["title"]
  },
  "aliases": ["table", "checklist"],
