{
  "type": "social-media",
  "name": "Social Media Section",
  "description": "Displays social media posts, engagement metrics, and social feed content.",
  "selector": "lib-social-media-section",
  "useCases": [
    "Social profiles",
    "Social feeds",
    "Engagement tracking",
    "Social monitoring",
    "Content aggregation"
  ],
  "bestPractices": [
    "Include platform information",
    "Show engagement metrics",
    "Add timestamps",
    "Include profile links",
    "Show follower counts"
  ],
  "rendering": {
    "usesFields": true,
    "usesItems": true,
    "defaultColumns": 1,
    "supportsCollapse": true,
    "supportsEmoji": true
  },
  "fieldSchema": {
    "type": "object",
    "properties": {
      "platform": { "type": "string", "enum": ["twitter", "linkedin", "facebook", "instagram", "youtube", "tiktok", "github"], "description": "Social platform" },
      "handle": { "type": "string", "description": "Social media handle" },
      "url": { "type": "string", "format": "uri", "description": "Profile URL" },
      "followers": { "type": "number", "description": "Follower count" },
      "engagement": { "type": "number", "description": "Engagement rate" },
      "verified": { "type": "boolean", "description": "Verified account" }
    },
    "required": []
  },
  "aliases": ["social", "socials"],
