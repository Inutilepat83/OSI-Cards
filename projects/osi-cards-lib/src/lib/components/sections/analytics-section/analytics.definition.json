{
  "type": "analytics",
  "name": "Analytics Section",
  "description": "Displays metrics with visual indicators and percentages. Perfect for KPIs, performance metrics, and statistical data.",
  "selector": "lib-analytics-section",
  "useCases": [
    "Performance metrics",
    "KPIs and dashboards",
    "Growth statistics",
    "Sales analytics",
    "Customer health scores"
  ],
  "bestPractices": [
    "Include percentage values for better visualization",
    "Group related metrics together",
    "Use performance ratings for quick assessment"
  ],
  "rendering": {
    "usesFields": true,
    "usesItems": false,
    "defaultColumns": 2,
    "supportsCollapse": true,
    "supportsEmoji": true
  },
  "fieldSchema": {
    "type": "object",
    "properties": {
      "label": { "type": "string", "description": "Metric label" },
      "value": { "type": ["string", "number"], "description": "Metric value" },
      "percentage": {
        "type": "number",
        "description": "Percentage value for visualization"
      },
      "performance": {
        "type": "string",
        "enum": ["excellent", "good", "average", "poor"],
        "description": "Performance rating"
      },
      "icon": { "type": "string", "description": "Icon identifier" }
    },
    "required": ["label"]
  },
  "aliases": ["metrics", "stats", "kpi"],
  "testFixtures": {
