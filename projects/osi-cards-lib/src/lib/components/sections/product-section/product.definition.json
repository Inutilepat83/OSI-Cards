{
  "type": "product",
  "name": "Product Section",
  "portfolioDescription": "Product names, features, capabilities",
  "description": "Displays product information, features, benefits, and pricing.",
  "selector": "lib-product-section",
  "useCases": [
    "Product catalogs",
    "Feature lists",
    "Product comparisons",
    "Specifications",
    "Service offerings"
  ],
  "bestPractices": [
    "Highlight key features",
    "Include pricing when relevant",
    "Use descriptions for details",
    "Add status for availability",
    "Show version information"
  ],
  "rendering": {
    "usesFields": true,
    "usesItems": false,
    "defaultColumns": 1,
    "supportsCollapse": true,
    "supportsEmoji": true
  },
  "fieldSchema": {
    "type": "object",
    "properties": {
      "label": {
        "type": "string",
        "description": "Product attribute label"
      },
      "value": {
        "type": "string",
        "description": "Attribute value"
      },
      "icon": {
        "type": "string",
        "description": "Icon identifier"
      },
      "price": {
        "type": "string",
        "description": "Product price"
      },
      "status": {
        "type": "string",
        "enum": ["available", "out-of-stock", "coming-soon", "deprecated"],
        "description": "Product availability"
      }
    },
    "required": ["label"]
  },
  "completionRules": {
    "minFields": 1,
    "requireNonEmptyValues": true,
    "mandatoryFields": ["label"]
  },
  "examples": {
    "example": {
      "title": "Nexus Analytics Enterprise",
      "type": "product",
      "description": "AI-powered business intelligence platform for data-driven enterprises",
      "fields": [
        {
          "label": "Product Name",
          "value": "Nexus Analytics Enterprise Edition"
        },
        {
          "label": "Version",
          "value": "5.2.1 LTS (Long-term Support)"
        },
        {
          "label": "Storage Included",
          "value": "5TB cloud storage with auto-scaling"
        },
        {
          "label": "Status",
          "value": "Generally Available",
          "status": "available"
        }
      ],
      "preferredColumns": 1,
      "priority": 3
    }
  }
}
