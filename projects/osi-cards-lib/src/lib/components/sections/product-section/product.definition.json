{
  "type": "product",
  "name": "Product Section",
  "description": "Displays product information, features, benefits, and pricing.",
  "selector": "lib-product-section",
  "useCases": [
    "Product catalogs",
    "Feature lists",
    "Product comparisons",
    "Specifications",
    "Service offerings"
  ],
  "bestPractices": [
    "Highlight key features",
    "Include pricing when relevant",
    "Use descriptions for details",
    "Add status for availability",
    "Show version information"
  ],
  "rendering": {
    "usesFields": true,
    "usesItems": false,
    "defaultColumns": 1,
    "supportsCollapse": true,
    "supportsEmoji": true
  },
  "fieldSchema": {
    "type": "object",
    "properties": {
      "label": { "type": "string", "description": "Product attribute label" },
      "value": { "type": "string", "description": "Attribute value" },
      "icon": { "type": "string", "description": "Icon identifier" },
      "price": { "type": "string", "description": "Product price" },
      "status": {
        "type": "string",
        "enum": ["available", "out-of-stock", "coming-soon", "deprecated"],
        "description": "Product availability"
      }
    },
    "required": ["label"]
  },
  "testFixtures": {
    "complete": {
      "title": "Nexus Analytics Enterprise",
      "type": "product",
      "description": "AI-powered business intelligence platform for data-driven enterprises",
      "fields": [
        {
