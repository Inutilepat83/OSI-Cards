{
  "type": "info",
  "name": "Info Section",
  "description": "Displays key-value pairs in a clean, scannable format. Ideal for metadata, contact information, and general data display.",
  "selector": "lib-info-section",
  "useCases": [
    "Company information",
    "Contact details",
    "Metadata display",
    "Key-value pairs",
    "Profile summaries"
  ],
  "bestPractices": [
    "Use for structured data with clear labels and values",
    "Keep labels concise and descriptive",
    "Use trend indicators for dynamic data",
    "Group related fields together",
    "Use icons to enhance visual hierarchy"
  ],
  "rendering": {
    "usesFields": true,
    "usesItems": false,
    "defaultColumns": 1,
    "supportsCollapse": true
  },
  "fieldSchema": {
    "type": "object",
    "properties": {
      "label": {
        "type": "string",
        "description": "Field label/key"
      },
      "value": {
        "type": ["string", "number", "boolean", "null"],
        "description": "Field value"
      },
      "icon": {
        "type": "string",
        "description": "Icon identifier (emoji or icon name)"
      },
      "description": {
        "type": "string",
        "description": "Additional field description"
      },
      "trend": {
        "type": "string",
        "enum": ["up", "down", "stable", "neutral"],
        "description": "Trend indicator"
      },
      "change": {
        "type": "number",
        "description": "Numeric change value"
      },
      "format": {
        "type": "string",
        "enum": ["currency", "percentage", "number", "text"],
        "description": "Value format"
      }
    },
    "required": ["label"]
  },
  "completionRules": {
    "minFields": 1,
    "requireNonEmptyValues": true,
    "mandatoryFields": ["label"]
  },
  "examples": {
    "example": {
      "title": "Nexus Technologies Inc.",
