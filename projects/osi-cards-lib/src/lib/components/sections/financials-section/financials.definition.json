{
  "type": "financials",
  "name": "Financials Section",
  "description": "Displays financial data including revenue, expenses, P&L statements, and currency information.",
  "selector": "lib-financials-section",
  "useCases": [
    "Financial reports",
    "Quarterly earnings",
    "Budget information",
    "Revenue tracking",
    "Investment summaries"
  ],
  "bestPractices": [
    "Use currency formatting",
    "Include time periods",
    "Show trends and changes",
    "Group by category",
    "Highlight key metrics"
  ],
  "rendering": {
    "usesFields": true,
    "usesItems": false,
    "defaultColumns": 2,
    "supportsCollapse": true,
    "supportsEmoji": false
  },
  "fieldSchema": {
    "type": "object",
    "properties": {
      "label": { "type": "string", "description": "Financial metric name" },
      "value": { "type": ["string", "number"], "description": "Metric value" },
      "format": { "type": "string", "enum": ["currency", "percentage", "number", "ratio"], "description": "Value format" },
      "change": { "type": "number", "description": "Change percentage" },
      "trend": { "type": "string", "enum": ["up", "down", "stable"], "description": "Trend indicator" },
      "period": { "type": "string", "description": "Time period (Q1, YTD, etc.)" },
      "currency": { "type": "string", "description": "Currency code (USD, EUR, etc.)" }
    },
    "required": ["label"]
  },
  "testFixtures": {
