{
  "type": "event",
  "name": "Event Section",
  "description": "Displays chronological events, timelines, schedules, and calendar information.",
  "selector": "lib-event-section",
  "useCases": [
    "Event calendars",
    "Project timelines",
    "Schedules",
    "Milestones",
    "Upcoming activities"
  ],
  "bestPractices": [
    "Include dates and times",
    "Add location information",
    "Use status for event state",
    "Chronological ordering",
    "Group by category or date"
  ],
  "rendering": {
    "usesFields": true,
    "usesItems": true,
    "defaultColumns": 1,
    "supportsCollapse": true,
    "supportsEmoji": true
  },
  "fieldSchema": {
    "type": "object",
    "properties": {
      "label": { "type": "string", "description": "Event label" },
      "value": { "type": "string", "description": "Event name/description" },
      "date": { "type": "string", "format": "date", "description": "Event date" },
      "time": { "type": "string", "description": "Event time" },
      "endDate": { "type": "string", "format": "date", "description": "Event end date" },
      "category": { "type": "string", "description": "Event category" },
      "status": { "type": "string", "enum": ["confirmed", "planned", "tentative", "cancelled", "completed"], "description": "Event status" },
      "location": { "type": "string", "description": "Event location" },
      "attendees": { "type": "number", "description": "Number of attendees" }
    },
    "required": []
  },
  "aliases": ["calendar", "schedule"],
