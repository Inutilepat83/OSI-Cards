{
  "type": "map",
  "name": "Map Section",
  "description": "Displays geographic data with embedded maps, pins, and location information.",
  "selector": "lib-map-section",
  "useCases": [
    "Office locations",
    "Store finder",
    "Geographic data",
    "Location tracking",
    "Service coverage"
  ],
  "bestPractices": [
    "Include coordinates or addresses",
    "Use proper location formats",
    "Add location metadata",
    "Ensure map accessibility",
    "Show location types visually"
  ],
  "rendering": {
    "usesFields": true,
    "usesItems": false,
    "defaultColumns": 1,
    "supportsCollapse": false,
    "supportsEmoji": false,
    "requiresExternalLib": "leaflet"
  },
  "fieldSchema": {
    "type": "object",
    "properties": {
      "name": { "type": "string", "description": "Location name" },
      "address": { "type": "string", "description": "Physical address" },
      "x": { "type": "number", "description": "Latitude coordinate" },
      "y": { "type": "number", "description": "Longitude coordinate" },
      "type": {
        "type": "string",
        "description": "Location type (office, branch, etc.)"
      },
      "coordinates": {
        "type": "object",
        "properties": {
          "lat": { "type": "number" },
          "lng": { "type": "number" }
        }
      }
    },
    "required": ["name"]
  },
  "aliases": ["locations"],
