{
  "$schema": "./section-registry.schema.json",
  "version": "1.0.0",
  "description": "Single source of truth for all OSI Cards section types",
  "sections": {
    "info": {
      "name": "Info Section",
      "description": "Displays key-value pairs in a clean, scannable format. Ideal for metadata, contact information, and general data display.",
      "componentPath": "./lib/components/sections/info-section.component",
      "stylePath": "./lib/styles/components/sections/_info.scss",
      "selector": "app-info-section",
      "useCases": [
        "Company information",
        "Contact details",
        "Metadata display",
        "Key-value pairs"
      ],
      "bestPractices": [
        "Use for structured data with clear labels and values",
        "Keep labels concise and descriptive",
        "Use trend indicators for dynamic data",
        "Group related fields together"
      ],
      "rendering": {
        "usesFields": true,
        "usesItems": false,
        "defaultColumns": 1,
        "supportsCollapse": true,
        "supportsEmoji": true
      },
      "fieldSchema": {
        "type": "object",
        "properties": {
          "label": { "type": "string", "description": "Field label/key" },
          "value": { "type": ["string", "number", "boolean", "null"], "description": "Field value" },
          "icon": { "type": "string", "description": "Icon identifier (emoji or icon name)" },
          "description": { "type": "string", "description": "Additional field description" },
          "trend": { "type": "string", "enum": ["up", "down", "stable", "neutral"], "description": "Trend indicator" },
          "change": { "type": "number", "description": "Numeric change value" },
          "format": { "type": "string", "enum": ["currency", "percentage", "number", "text"], "description": "Value format" }
        },
        "required": ["label"]
      },
      "testFixtures": {
        "complete": {
          "title": "Company Information",
          "type": "info",
          "description": "Detailed company information and metadata",
          "fields": [
            { "label": "Industry", "value": "Technology", "icon": "üè¢" },
            { "label": "Founded", "value": "2010", "icon": "üìÖ" },
            { "label": "Headquarters", "value": "San Francisco, CA", "icon": "üìç" },
            { "label": "Employees", "value": "5,000+", "icon": "üë•", "trend": "up" },
            { "label": "Website", "value": "www.example.com", "icon": "üåê" }
          ]
        },
        "minimal": {
          "title": "Info",
          "type": "info",
          "fields": [{ "label": "Key", "value": "Value" }]
        },
        "edgeCases": {
          "title": "Info Section with Very Long Title That Should Be Truncated Properly",
          "type": "info",
          "fields": [
            { "label": "Empty Value", "value": "" },
            { "label": "Null Value", "value": null },
            { "label": "Number", "value": 12345.6789 },
            { "label": "Boolean", "value": true }
          ]
        }
      }
    },
    "analytics": {
      "name": "Analytics Section",
      "description": "Displays metrics with visual indicators, trends, and percentages. Perfect for KPIs, performance metrics, and statistical data.",
      "componentPath": "./lib/components/sections/analytics-section/analytics-section.component",
      "stylePath": "./lib/styles/components/sections/_analytics.scss",
      "selector": "app-analytics-section",
      "useCases": [
        "Performance metrics",
        "KPIs",
        "Growth statistics",
        "Analytics dashboards"
      ],
      "bestPractices": [
        "Include percentage values for better visualization",
        "Use trend indicators (up/down/stable)",
        "Show change values when available",
        "Group related metrics together"
      ],
      "rendering": {
        "usesFields": true,
        "usesItems": false,
        "defaultColumns": 2,
        "supportsCollapse": true,
        "supportsEmoji": true
      },
      "fieldSchema": {
        "type": "object",
        "properties": {
          "label": { "type": "string", "description": "Metric label" },
          "value": { "type": ["string", "number"], "description": "Metric value" },
          "percentage": { "type": "number", "description": "Percentage value for visualization" },
          "performance": { "type": "string", "enum": ["excellent", "good", "average", "poor"], "description": "Performance rating" },
          "trend": { "type": "string", "enum": ["up", "down", "stable", "neutral"], "description": "Trend indicator" },
          "change": { "type": "number", "description": "Numeric change value" },
          "icon": { "type": "string", "description": "Icon identifier" }
        },
        "required": ["label"]
      },
      "aliases": ["metrics", "stats"],
      "testFixtures": {
        "complete": {
          "title": "Performance Analytics",
          "type": "analytics",
          "description": "Key performance indicators and metrics",
          "fields": [
            { "label": "Performance Score", "value": "95%", "percentage": 95, "performance": "excellent", "trend": "up", "change": 5.2 },
            { "label": "Growth Rate", "value": "25% YoY", "percentage": 25, "performance": "good", "trend": "up", "change": 8.1 },
