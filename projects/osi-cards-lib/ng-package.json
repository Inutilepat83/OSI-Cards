{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/osi-cards-lib",
  "lib": {
    "entryFile": "src/public-api.ts",
    "styleIncludePaths": [
      "src/lib/styles",
      "src/lib/styles/tokens",
      "src/lib/styles/core",
      "src/lib/styles/bundles",
      "src/lib/styles/reset"
    ]
  },
  "allowedNonPeerDependencies": [],
  "assets": [
    {
      "input": "./src/lib/styles",
      "glob": "**/*.scss",
      "output": "/styles"
    },
    {
      "input": "./src/lib/styles",
      "glob": "**/*.css",
      "output": "/styles"
    },
    {
      "input": "./styles",
      "glob": "**/*.css",
      "output": "/styles"
    },
    {
      "input": "./README.md",
      "glob": "**/*",
      "output": "/"
    },
    {
      "input": "./USAGE.md",
      "glob": "**/*",
      "output": "/"
    }
  ]
}
