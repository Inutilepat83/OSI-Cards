{
  "name": "osi-cards",
  "version": "1.5.2",
  "private": true,
  "bin": {
    "osi-cards": "./tools/cli/osi-cards-cli.js"
  },
  "scripts": {
    "ng": "ng",
    "start": "npx ng serve",
    "start:timeout": "./scripts/start-with-timeout.sh 30",
    "start:timeout:short": "./scripts/start-with-timeout.sh 15",
    "start:timeout:long": "./scripts/start-with-timeout.sh 60",
    "start:safe": "npm run lint:fix && npm run start:timeout",
    "build": "npx ng build",
    "build:lib": "ng build osi-cards-lib && node scripts/generate-library-package-json.js && node scripts/copy-library-files.js && node scripts/compile-styles.js",
    "compile:styles": "node scripts/compile-styles.js",
    "prepublishOnly": "npm run build:lib",
    "publish:lib": "cd dist/osi-cards-lib && npm publish",
    "publish:lib:dry-run": "cd dist/osi-cards-lib && npm pack",
    "publish:lib:test": "cd dist/osi-cards-lib && npm pack && echo 'Package created. Review the .tgz file to see what would be published.'",
    "publish:smart": "node scripts/smart-publish.js",
    "publish:smart:dry": "node scripts/smart-publish.js dry",
    "publish:smart:minor": "node scripts/smart-publish.js minor",
    "publish:smart:major": "node scripts/smart-publish.js major",
    "build:prod": "npx ng build --configuration production",
    "build:analyze": "npm run analyze",
    "build:prod:ci": "npx ng build --configuration production --output-hashing=all",
    "size:check": "npx ng build --configuration production --output-hashing=all --no-progress && node scripts/size-check.js",
    "test": "npx ng test",
    "test:watch": "npx ng test --watch",
    "test:unit": "npx ng test --watch=false",
    "test:integration": "playwright test --config=playwright.config.ts --grep @integration",
    "test:performance": "lighthouse http://localhost:4200 --output=html --output-path=./performance-reports/lighthouse.html --quiet || echo 'Lighthouse not installed. Install with: npm install -g lighthouse'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:visual": "playwright test e2e/visual-regression.spec.ts",
    "test:visual:update": "playwright test e2e/visual-regression.spec.ts --update-snapshots",
    "test:multi-env": "playwright test e2e/integration/multi-environment.spec.ts",
    "test:multi-env:ui": "playwright test e2e/integration/multi-environment.spec.ts --ui",
    "test:multi-env:update": "playwright test e2e/integration/multi-environment.spec.ts --update-snapshots",
    "test:visual-consistency": "playwright test e2e/integration/visual-consistency.spec.ts",
    "test:visual-consistency:ui": "playwright test e2e/integration/visual-consistency.spec.ts --ui",
    "test:visual-consistency:update": "playwright test e2e/integration/visual-consistency.spec.ts --update-snapshots",
    "test:visual-consistency:report": "playwright test e2e/integration/visual-consistency.spec.ts --reporter=html",
    "test:ilibrary": "playwright test e2e/integration/ilibrary-integration.spec.ts e2e/integration/multi-environment.spec.ts e2e/integration/visual-consistency.spec.ts",
    "generate:test-configs": "node scripts/generate-test-configs.js",
    "generate:from-registry": "node scripts/generate-from-registry.js",
    "generate:registry-types": "node scripts/generate-from-registry.js --types",
    "generate:registry-all": "node scripts/generate-from-registry.js --all",
    "generate:registry-fixtures": "node scripts/generate-registry-fixtures.js",
    "generate:styles": "node scripts/generate-style-bundle.js",
    "generate:manifest": "node scripts/generate-section-manifest.js",
    "generate:llm-prompt": "node scripts/generate-llm-prompt.js",
    "generate:all": "npm run generate:from-registry && npm run generate:registry-fixtures && npm run generate:styles && npm run generate:manifest && npm run generate:tests && npm run generate:public-api && npm run generate:llm-prompt && npm run docs:from-registry",
    "generate:public-api": "node scripts/generate-public-api.js",
    "generate:tests": "node scripts/generate-test-suite.js",
    "test:smoke": "echo 'Smoke tests placeholder'",
    "test:health": "echo 'Health checks placeholder'",
    "lint": "npx ng lint",
    "lint:fix": "npx ng lint --fix",
    "format": "prettier --write \"src/**/*.{ts,html,css,scss,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,css,scss,json}\"",
    "prepare": "husky install && node scripts/setup-hooks.js",
    "docs:prerender": "npx ts-node scripts/prerender-docs.ts",
    "pre-commit": "lint-staged",
    "analyze": "npx ng build --source-map && npx webpack-bundle-analyzer dist/osi-cards/*.js",
    "bundle:analyze": "npm run build:prod && node scripts/bundle-analyzer.js",
    "bundle:report": "npm run build:prod && node scripts/bundle-analyzer.js",
    "audit:tree-shaking": "node scripts/tree-shaking-audit.js",
    "audit:onpush": "node scripts/audit-onpush.js",
    "validate:exports": "node scripts/validate-barrel-exports.js",
    "validate:exports:report": "node scripts/validate-barrel-exports.js --report",
    "validate:exports:strict": "node scripts/validate-barrel-exports.js --strict",
    "migrate:v2": "node scripts/migration-v2.js",
    "migrate:v2:dry-run": "node scripts/migration-v2.js --dry-run",
    "migrate:v2:verbose": "node scripts/migration-v2.js --verbose",
    "generate:card-manifest": "node scripts/generate-manifest.js",
    "prebuild": "npm run generate:manifest && npm run version:generate && npm run docs:generate",
    "version:patch": "node scripts/version-manager.js patch",
    "version:minor": "node scripts/version-manager.js minor",
    "version:major": "node scripts/version-manager.js major",
    "version:prerelease": "node scripts/version-manager.js prerelease",
    "version:sync": "node scripts/version-manager.js sync",
    "version:show": "node scripts/version-manager.js show",
    "version:generate": "node scripts/generate-version.js",
    "perf:lighthouse": "echo 'Run Lighthouse locally e.g. chrome --headless --remote-debugging-port=9222; lighthouse http://localhost:4200 --quiet --chrome-flags=\"--headless --no-sandbox\"'",
    "pwa:validate": "echo 'PWA validation placeholder'",
    "performance:report": "echo 'Performance report placeholder'",
    "serve:prod": "npx ng serve --configuration production",
    "clean": "rm -rf dist/ node_modules/.cache/ .angular/",
    "docs:generate": "npm run docs:comprehensive && npm run docs:pages && npm run docs:routes",
    "docs:comprehensive": "node scripts/generate-comprehensive-docs.js && node scripts/generate-remaining-docs.js",
    "docs:pages": "node scripts/generate-doc-page-components.js",
    "docs:pages:force": "node scripts/generate-doc-page-components.js --force",
    "docs:deploy:local": "npm run build:prod && npx http-server dist/osi-cards/browser -p 8080 -o",
    "docs:routes": "node scripts/generate-all-routes.js",
    "docs:from-registry": "node scripts/generate-docs-from-registry.js",
    "docs:api": "typedoc",
    "docs:api-reference": "node scripts/generate-api-docs.js",
    "docs:sections": "node scripts/generate-section-docs.js",
    "docs:readme": "node scripts/generate-readme-from-ngdoc.js",
    "docs:llm": "node scripts/generate-llm-docs.js",
    "docs:extract-jsdoc": "node scripts/extract-jsdoc.js",
    "docs:watch": "npm run docs:generate",
    "docs:build": "npm run docs:generate && npm run docs:api && echo 'Documentation generated'",
    "docs:all": "npm run docs:comprehensive && npm run docs:pages && npm run docs:routes && npm run docs:api",
    "docs:serve": "npx http-server docs/api -p 8080 -o",
    "docs:100": "npm run docs:all && echo '100 documentation points generated'",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "dev": "npm run start",
    "dev:watch": "npm run start",
    "dev:hot": "npx ng serve --hmr --configuration development",
    "check:deps": "node scripts/check-dependencies.js",
    "check:files": "node scripts/check-file-sizes.js",
    "check:security": "npm audit --audit-level=moderate",
    "vulnerability:scan": "node scripts/vulnerability-scan.js",
    "vulnerability:scan:json": "node scripts/vulnerability-scan.js --json",
    "vulnerability:scan:strict": "node scripts/vulnerability-scan.js --fail-on-critical",
    "check:change-detection": "node scripts/audit-change-detection.js",
    "audit:input-sanitization": "node scripts/audit-input-sanitization.js",
    "bundle:baseline": "node scripts/bundle-size-monitor.js baseline",
    "bundle:monitor": "node scripts/bundle-size-monitor.js check",
    "test:a11y": "node scripts/accessibility-test.js",
    "wcag:audit": "node scripts/wcag-audit.js",
    "check:all": "npm run lint && npm run test:unit && npm run check:deps && npm run check:security && npm run check:change-detection",
    "validate:card": "node scripts/validate-card.js",
    "validate:section-usage": "node scripts/validate-section-usage.js",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run",
    "release:preview": "semantic-release --dry-run --no-ci",
    "generate:section": "schematics tools/schematics:section",
    "generate:template": "schematics tools/schematics:card-template",
    "docs:openapi": "node scripts/generate-openapi.js",
    "docs:openapi:validate": "node scripts/generate-openapi.js --validate",
    "i18n:validate": "node scripts/translation-management.js validate",
    "i18n:missing": "node scripts/translation-management.js extract-missing",
    "i18n:merge": "node scripts/translation-management.js merge",
    "i18n:report": "node scripts/translation-management.js report",
    "i18n:unused": "node scripts/translation-management.js unused"
  },
  "dependencies": {
    "@angular/animations": "^20.0.0",
    "@angular/cdk": "^20.0.0",
    "@angular/common": "^20.0.0",
    "@angular/compiler": "^20.0.0",
    "@angular/core": "^20.0.0",
    "@angular/forms": "^20.0.0",
    "@angular/material": "^20.0.0",
    "@angular/platform-browser": "^20.0.0",
    "@angular/platform-browser-dynamic": "^20.0.0",
    "@angular/router": "^20.0.0",
    "@angular/service-worker": "^20.0.0",
    "@ng-doc/app": "^20.1.1",
    "@ng-doc/builder": "^20.1.1",
    "@ng-doc/core": "^20.1.1",
    "@ng-doc/ui-kit": "^20.1.1",
    "@ng-web-apis/common": "^4.12.2",
    "@ngrx/effects": "^18.0.0",
    "@ngrx/entity": "^18.0.0",
    "@ngrx/store": "^18.0.0",
    "@ngrx/store-devtools": "^18.0.0",
    "@tinkoff/ng-polymorpheus": "^4.3.0",
    "di-controls": "^5.0.11",
    "dom-to-image-more": "^3.7.2",
    "lucide": "^0.548.0",
    "lucide-angular": "^0.548.0",
    "marked": "^17.0.1",
    "prismjs": "^1.30.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "optionalDependencies": {
    "chart.js": "^4.4.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "leaflet": "^1.9.4",
    "primeng": "^20.0.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.0.0",
    "@angular/cli": "^20.0.0",
    "@angular/compiler-cli": "^20.0.0",
    "@playwright/test": "^1.48.0",
    "@types/jasmine": "^5.1.9",
    "@types/leaflet": "^1.9.0",
    "@types/prismjs": "^1.26.5",
    "angular-eslint": "20.2.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.33.0",
    "husky": "^9.1.7",
    "jasmine-core": "^5.10.0",
    "jasmine-marbles": "^0.9.2",
    "jsdom": "^26.1.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "karma-jsdom-launcher": "^18.0.0",
    "lint-staged": "^16.1.6",
    "ng-packagr": "^20.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.0",
    "typescript-eslint": "8.40.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{html,css,scss,json,md}": [
      "prettier --write"
    ],
    "*.ts": [
      "bash -c 'npx tsc --noEmit --project tsconfig.json || true'"
    ],
    "projects/osi-cards-lib/section-registry.json": [
      "node scripts/generate-from-registry.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm run test:unit && npm run check:security && npm run size:check"
    }
  },
  "sideEffects": [
    "**/*.css",
    "**/*.scss",
    "src/polyfills.ts",
    "src/main.ts"
  ]
}
