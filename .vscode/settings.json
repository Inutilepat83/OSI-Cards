{
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "files.associations": {
    "*.css": "postcss"
  },
  "emmet.includeLanguages": {
    "postcss": "html"
  },
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": [
      ".github/workflows/*.yml",
      ".github/workflows/*.yaml"
    ]
  },
  "yaml.validate": true,
  "yaml.format.enable": true,
  "yaml.format.singleQuote": false,
  "yaml.format.bracketSpacing": true,
  // Removed CloudFormation intrinsic function tags â€“ not needed for GitHub Actions and can trigger false positives
  // If you later add AWS SAM/CloudFormation templates, reintroduce the needed intrinsic tags here.
  "yaml.customTags": [],
  // Enhanced YAML language server features
  "yaml.schemaStore.enable": true,
  "yaml.hover": true,
  "yaml.completion": true,
  "yaml.format.printWidth": 120,
  // General editor / lint improvements
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json",
    "yaml"
  ],
  // Prefer Prettier where available; fallback is YAML formatter
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // Suppress overly verbose YAML server trace output
  "yaml.trace.server": "off",
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.suggestOnTriggerCharacters": true
  ,
  // Suppress noisy false-positive diagnostics from YAML / GitHub Actions validators for this large workflow
  // Remove this block if you need to investigate real syntax issues in the workflow file.
  "problems.exclude": {
    "**/.github/workflows/ci-cd.yml": true
  },
  "chat.mcp.serverSampling": {
    "OSI-Cards/.vscode/mcp.json: mcpServers": {
      "allowedModels": [
        "copilot/gpt-5.1-codex-mini"
      ]
    }
  },
  "[toon]": {
    "editor.defaultFormatter": "oaslananka.vscode-toon-tools"
  }
}