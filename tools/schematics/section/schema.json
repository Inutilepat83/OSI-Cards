{
  "$schema": "http://json-schema.org/schema",
  "id": "OSICardsSectionSchematic",
  "title": "OSI Cards Section Component Schematic",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the section component",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What is the name of the section component?"
    },
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the section component",
      "visible": false,
      "default": "src/app/shared/components/cards/sections"
    },
    "type": {
      "type": "string",
      "description": "The section type identifier (e.g., 'info', 'list', 'chart')",
      "x-prompt": "What is the section type identifier?"
    },
    "usesFields": {
      "type": "boolean",
      "description": "Whether the section uses fields (CardField)",
      "default": true,
      "x-prompt": "Does this section use fields (CardField)?"
    },
    "usesItems": {
      "type": "boolean",
      "description": "Whether the section uses items (CardItem)",
      "default": false,
      "x-prompt": "Does this section use items (CardItem)?"
    },
    "project": {
      "type": "string",
      "description": "The name of the project",
      "default": "osi-cards"
    }
  },
  "required": ["name", "type"]
}

